<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bubblejet.myapplication.MainActivity">

    <RelativeLayout
        android:id="@+id/relative_layout_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/day_background" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_power_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageButton
            android:id="@+id/space_topleft_power_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/space_center_power_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/space_bottomleft_power_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/power_up_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/power_up_top_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/power_up_top_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/power_up_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/power_up_center_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/power_up_center_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/power_up_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/power_up_bottom_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/power_up_bottom_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:srcCompat="@drawable/owl_null" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_owl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageButton
            android:id="@+id/space_bottomleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/space_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/owl_null" />

        <ImageButton
            android:id="@+id/space_topleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/owl_null" />

        <ImageView
            android:id="@+id/owl"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/space_center"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/owl_null" />

        <TextView
            android:id="@+id/test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/test_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/darker_gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/test_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_text_1"
            android:text="TextView"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/game_over_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            app:srcCompat="@drawable/game_over_text" />

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:onClick="onClickPlayButton"
            app:srcCompat="@drawable/play_button" />

        <ImageButton
            android:id="@+id/upbutton"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="128dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="#8cfffb"
            android:onClick="onClickUpButton"
            app:srcCompat="@drawable/up_arrow_unpressed" />

        <ImageButton
            android:id="@+id/downbutton"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="128dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="#8cfffb"
            android:onClick="onClickDownButton"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            app:srcCompat="@drawable/down_arrow_unpressed" />

        <ImageButton
            android:id="@+id/testButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickTestButton"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#8cfffb"
            android:onClick="onClickHomeButton"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/home_button" />

        <ImageView
            android:id="@+id/space_bottomright"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="#8cfffb"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="0dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
